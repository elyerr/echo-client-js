{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES2018",
      "DOM"
    ],
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "distribution",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true
  }
}