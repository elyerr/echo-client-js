{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "declaration": true,
    "module": "ES2015",
    "moduleResolution": "Node",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES6",
    "isolatedModules": false,
    "removeComments": true,
    "esModuleInterop": true, 
    "lib": [
      "ES6",
      "DOM"
    ],
    "strict": true, 
  }
}